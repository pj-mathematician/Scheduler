#: include login.kv

<newinput>:
	name: 'ninput'
	FloatLayout:
		DefaultLabel:
			text: 'Tell us more about yourself!'
			font_size: 50
			pos_hint: {'center_y' : 0.90}
			font_name: 'Product Sans Bold.ttf'

		DefaultLabel:
			text:'To give a schedule best suited to you needs, we need some more info about you'
			font_size:20
			pos_hint: {'center_y': 0.8}

		
		SideLabel:
			text:'Wake up time        - '
			pos_hint:{'center_x':0.6,'center_y':0.7}
		ClockButton:
			pos_hint:{'center_x':0.52,'center_y':0.7}
			on_release: app.show_time_picker()
		ShowTimeLabel:
			id: wake
			pos_hint:{'center_x':0.9,'center_y':0.7}

<SideLabel@MDLabel>:
    theme_text_color:'Primary'
    font_size:27
    font_name: 'Product Sans Regular.ttf'

<ClockButton@MDFillRoundFlatIconButton>:
    icon:'clock'
    text : 'Set'
    width:dp(100)

<ShowTimeLabel@MDLabel>:
    theme_text_color: 'Primary'
    font_name: 'Product Sans Regular.ttf'